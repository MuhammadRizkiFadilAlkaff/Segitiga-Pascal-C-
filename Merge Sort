#include <iostream>
using namespace std;

void Gabung(int arr[], int kiri, int tengah, int kanan) {
    int n1 = tengah - kiri + 1;
    int n2 = kanan - tengah;
    int L[n1], R[n2];
    for (int I = 0; I < n1; I++) {
        L[I] = arr[kiri + I];
    }
    for (int J = 0; J < n2; J++) {
        R[J] = arr[tengah + 1 + J];
    }
    int i = 0, j = 0, K = kiri;
    while (i < n1 && j < n2) {
        if (L[i] >= R[j]) {
            arr[K++] = R[j++];
        }
        else {
            arr[K++] = L[i++];
        }
    }
    while (i < n1) {
        arr[K++] = L[i++];
    }
    while (j < n2) {
        arr[K++] = R[j++];
    }
}

void Urut(int arr[], int kiri, int kanan) {
    if (kiri < kanan) {
        int tengah = kiri + (kanan - kiri) / 2;
        Urut(arr, kiri, tengah);
        Urut(arr, tengah + 1, kanan);
        Gabung(arr, kiri, tengah, kanan);
    }
}

int main() {
    int data[] = {5, 4, 2, 3, 6, 1};
    int N = sizeof(data) / sizeof(data[0]);
    Urut(data, 0, N - 1);
    for (int I = 0; I < N; I++) {
        cout<<data[I];
    }
    return 0;
}
